// There are generally two copies of this file, one in the directory where
// SandraChess.exe is located (DefaultSettings.json), and one that lives in the
// local application data folder.
//
// Preferences in the latter file override those that are specified in the
// default. In the majority of cases, only the latter file is changed, while the
// default settings serve as a template.
{
  // Identifies the version of the set of recognized properties. The only
  // allowed value is 1.
  "version": 1,

  // Subfolder of %LOCALAPPDATA% which should be used to store persistent data.
  // This includes the auto-save file, or e.g. a preferences file. Backward
  // slashes ('\') must be escaped in json strings (e.g. "C:\\Temp\\temp.txt").
  // Instead, forward slashes ('/') can be used to separate directories as well.
  "app_data_sub_folder_name": "SandraChess",

  // File name in the %LOCALAPPDATA% subfolder which contains the user-specific
  // preferences.
  "local_preferences_file_name": "Preferences.json",

  // Enables tools which assist with SandraChess development and debugging.
  "developer_mode": false,

  // Subfolder of the application directory which is scanned for language files.
  // Backward slashes ('\') must be escaped in json strings (e.g.
  // "C:\\Temp\\temp.txt"). Instead, forward slashes ('/') can be used to
  // separate directories as well.
  "lang_folder_name": "Languages",

  // The color of the dark squares. This value must be in the HTML color format,
  // for example "#808000" is the Olive color.
  "dark_square_color": "#ADD8E6",

  // The color of the light squares. This value must be in the HTML color
  // format, for example "#F0E68C" is the Khaki color.
  "light_square_color": "#F0FFFF",

  // The color of the arrow which displays the last move. This value must be in
  // the HTML color format, for example "#DC143C" is the Crimson color.
  "last_move_arrow_color": "#696969",

  // Whether or not to display all legal target squares of a piece when it is
  // selected.
  "display_legal_target_squares": true,

  // Overlay color used to display legal target squares. This value must be in
  // the HTML color format, for example "#B0E0E6" is the PowderBlue color.
  "legal_target_squares_color": "#F05A5A",

  // The number of plies (=half moves) to move forward of backward in a game for
  // fast navigation. This value must be between 2 and 40.
  "fast_navigation_ply_count": 10
}
